<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    
	<record model="ir.ui.view" id="demande_emprunt_tree_view">
		<field name="name">demande.tree</field>
		<field name="model">hr.emprunt.demande</field>
		<field name="arch" type="xml">
			<tree string="Demande emprunt">
				<field name="name"/>
				<field name="user_id"/>
				<field name="employe_id"/>
				<field name="job_id"/>
				<field name="motif_demande"/>
				<field name="montant_demande"/>
				<field name="date_demande"/>
				<field name="date_echeance"/>
				<field name="state"/>
			</tree>
		</field>
	</record>

	<record model="ir.ui.view" id="hr_emprunt_form_view">
		<field name="name">hr.emprunt.demande.form</field>
		<field name="model">hr.emprunt.demande</field>
		<field name="arch" type="xml">
			<form >
				<header>
					<button name="action_submitted" string="Soumettre aux RH" type="object" states="draft"/>
					<button name="action_confirmed" string="Transmettre a la comptabilite" type="object" states="submitted"/>
					<button name="action_generate_loaning" string="Generer échéancier de paiement" type="object" states="confirmed"/>
					<field name="state" widget="statusbar"/>
				</header>
				<sheet>
					<h4><field name="name" placeholder="Nom"/></h4>
					<group >
						<group >
							<field name="employe_id" required="True"/>
							<field name="user_id" invisible="1"/>
							<field name="job_id" />
							<field name="motif_demande"/>
							<field name="type_emprunt_id" required="True"/>
						</group>
						<group >
							<field name="montant_demande"/>
							<!--  <field name="somme_max"/>-->
							<field name="date_demande"/>
							<field name="date_echeance" required="True"/>
						</group>
					</group>
					<notebook>
						<page string="Note">
							<field name="note" nolabel="1"/>
						</page>
					</notebook>
				</sheet>
			</form>
		</field>
	</record>

